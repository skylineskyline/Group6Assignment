<Window x:Class="Group6Assignment.Search.wndSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group6Assignment.Search"        
        mc:Ignorable="d"        
        Title="Search Invoices" Height="350" Width="450" Closing="Window_Closing">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
            <GradientStop Color="LightGray" Offset="0.004"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <DataGrid x:Name="dgInvoices" HorizontalAlignment="Left" Height="130" Margin="27,63,0,0" VerticalAlignment="Top" Width="393" Background="White" CanUserAddRows="False">
            <DataGrid.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFBFBFBF"/>
                </LinearGradientBrush>
            </DataGrid.BorderBrush>
        </DataGrid>
        <Button x:Name="btnSelect" Content="Select" HorizontalAlignment="Left" Margin="30,239,0,0" VerticalAlignment="Top" Width="75" Click="btnSelect_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="345,239,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Label x:Name="lblInfo" Content="Please Select an Invoice. You may narrow your &#xD;&#xA;search using the drop-down boxes above." HorizontalAlignment="Left" Margin="82,194,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="274" Height="40"/>
        <ComboBox x:Name="cbInvoiceNumber" HorizontalAlignment="Left" Margin="30,31,0,0" VerticalAlignment="Top" Width="110" SelectionChanged="cbInvoiceNumber_SelectionChanged"/>
        <Label x:Name="lblInvoiceNumber" Content="Invoice Number" HorizontalAlignment="Left" Margin="30,5,0,0" VerticalAlignment="Top" Foreground="Black" Width="98"/>
        <Label x:Name="lblInvoiceDate" Content="Invoice Date" HorizontalAlignment="Left" Margin="179,5,0,0" VerticalAlignment="Top" Foreground="Black"/>
        <Label x:Name="lblTotalCharge" Content="Total Charge" HorizontalAlignment="Left" Margin="326,5,0,0" VerticalAlignment="Top" Foreground="Black"/>
        <ComboBox x:Name="cbInvoiceDate" HorizontalAlignment="Left" Margin="167,31,0,0" VerticalAlignment="Top" Width="110" SelectionChanged="cbInvoiceDate_SelectionChanged"/>
        <ComboBox x:Name="cbTotalCharge" HorizontalAlignment="Left" Margin="310,31,0,0" VerticalAlignment="Top" Width="110" SelectionChanged="cbTotalCharge_SelectionChanged"/>
        <Button x:Name="btnClear" Content="Clear Selection" HorizontalAlignment="Left" Margin="180,239,0,0" VerticalAlignment="Top" Width="88" Click="btnClear_Click"/>
    </Grid>
</Window>
